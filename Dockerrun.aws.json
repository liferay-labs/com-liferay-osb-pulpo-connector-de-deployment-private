{
  "AWSEBDockerrunVersion": 2,
  "authentication": {
    "bucket": "liferay-docker-credentials-pulpo-connector-de",
    "key": "dockercfg"
  },
  "volumes": [
    {
      "name": "awslogsdir",
      "host": {
        "sourcePath": "/var/log/"
      }
    },
    {
      "name": "filebeatconfdir",
      "host": {
        "sourcePath": "/var/app/current/filebeat/conf"
      }
    },
    {
      "name": "certsdir",
      "host": {
        "sourcePath": "/var/app/current/logstash/certs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "pulpo-client-de",
      "image": "liferay/com-liferay-pulpo-connector-de-private:20170830T102511Z",
      "essential": true,
      "memory": 4096,
      "extraHosts": [
        {
          "hostname": "lcs-portal-pulpo",
          "ipAddress": "54.243.198.186"
        },
        {
          "hostname": "lcs-gateway-pulpo",
          "ipAddress": "54.235.215.13"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        },
        {
          "hostPort": 5005,
          "containerPort": 5005
        },
        {
          "hostPort": 8099,
          "containerPort": 8099
        },
        {
          "hostPort": 11311,
          "containerPort": 11311
        }
      ]
    },
    {
      "name": "pulpo-filebeat",
      "image": "docker.elastic.co/beats/filebeat:5.5.2",
      "mountPoints": [
        {
          "sourceVolume": "filebeatconfdir",
          "containerPath": "/usr/share/filebeat/conf",
          "readOnly": true
        },
        {
          "sourceVolume": "awslogsdir",
          "containerPath": "/var/log/aws",
          "readOnly": true
        },
        {
          "sourceVolume": "certsdir",
          "containerPath": "/etc/pki/tls/certs",
          "readOnly": true
        }
      ],
      "command": [
        "./filebeat",
        "-c",
        "/usr/share/filebeat/conf/filebeat.yml",
        "-e"
      ],
      "essential": true,
      "memory": 256
    }
  ]
}
