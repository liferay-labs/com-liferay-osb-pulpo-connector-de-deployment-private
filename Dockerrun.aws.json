{
  "AWSEBDockerrunVersion": 2,
  "authentication": {
    "bucket": "liferay-docker-credentials-pulpo-connector-de",
    "key": "dockercfg"
  },
  "volumes": [
    {
      "name": "logsdir",
      "host": {
        "sourcePath": "/var/log/containers"
      }
    },
    {
      "name": "filebeatconfdir",
      "host": {
        "sourcePath": "/var/app/current/logstash/conf"
      }
    },
    {
      "name": "certsdir",
      "host": {
        "sourcePath": "/var/app/current/logstash/certs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "pulpo-client-de",
      "image": "liferay/com-liferay-pulpo-connector-de-private:20170822T223632Z",
      "essential": true,
      "memory": 4096,
      "extraHosts": [
        {
          "hostname": "lcs-portal-pulpo",
          "ipAddress": "54.243.198.186"
        },
        {
          "hostname": "lcs-gateway-pulpo",
          "ipAddress": "54.235.215.13"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        },
        {
          "hostPort": 5005,
          "containerPort": 5005
        },
        {
          "hostPort": 8099,
          "containerPort": 8099
        },
        {
          "hostPort": 11311,
          "containerPort": 11311
        }
      ]
    },
    {
      "name": "pulpo-filebeat",
      "image": "prameswar/filebeat:1.2",
      "mountPoints": [
        {
          "sourceVolume": "filebeatconfdir",
          "containerPath": "/etc/filebeat",
          "readOnly": true
        },
        {
          "sourceVolume": "logsdir",
          "containerPath": "/logs",
          "readOnly": true
        },
        {
          "sourceVolume": "certsdir",
          "containerPath": "/etc/pki/tls/certs",
          "readOnly": true
        }
      ],
      "essential": true,
      "memory": 512
    }
  ]
}
